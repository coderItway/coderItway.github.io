{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "types": ["node", "vitepress/client"],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "vitepress": ["./node_modules/vitepress/dist/node/index.d.ts"]
        }
    },
    "include": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.d.ts",
        ".vitepress/**/*.tsx",
        ".vitepress/**/*.vue",
        "shims-vue.d.ts"
    ],
    "exclude": ["dist", "node_modules"]
}
